<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<h1>
				<img src="../assets/img/64x64.png" alt="burger icon">
					Eat-Da-Burger 2.0
				<img src="../assets/img/64x64.png" alt="burger icon">
			</h1>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<h3>Submit a burger you would ike to devour!</h3>
					<input type="text" name="burger_name" class="form-control" value="" id="enter_text"><br>
				<button type="submit" class="btn btn-default" id="text-enter-button">Submit</button>
			</form>
		</div>
	</div>
</div><br>
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" class="task">
			<h3>Burgers to Devour</h3>
			{{#each burger_data}}
			{{#unless this.devoured}}
		</div>
		<div class="col-md-6 text-center">
			<p>{{this.id}}. {{this.burger_name}}</p>
			<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
				<input type="hidden" name="burger_id" type="text" value={{this.id}}>
				<button type="submit" class="btn btn-default">Devour it</button>
			</form><br>
			{{/unless}}
			{{/each}}
		</div>
	</div>
</div><br>
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" class="task">
			<h3>Devoured Burgers</h3>
			{{#each burger_data}}
			{{#if this.devoured}}
				<input class"form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div><br>

